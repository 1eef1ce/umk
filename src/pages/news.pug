extends common/layout

block content
    main.main
        include common/topmenu
        .news
            .container
                include common/breadcrumb
                h1.title-1 Новости
                .news__filter
                    .tabs
                        ul.tabs__list
                            li.tabs__item
                                a.tabs__link.active.js-tab-btn(href="javascript:void(0);" data-tab-btn="1") Важное
                            li.tabs__item
                                a.tabs__link.js-tab-btn(href="javascript:void(0);" data-tab-btn="2") Новости рынка
                            li.tabs__item
                                a.tabs__link.js-tab-btn(href="javascript:void(0);" data-tab-btn="3") Новая продукция
                            li.tabs__item
                                a.tabs__link.js-tab-btn(href="javascript:void(0);" data-tab-btn="4") О компании
                    form.news__form
                        select.js-select
                            option 2021
                            option 2020
                            option 2019
                .news__container
                    .tabs-content
                        .tabs-content__body.active.js-tab-body(data-tab-body="1")
                            .news__items
                                .news__item
                                    .news__img
                                        img(src="../img/placeholder-s.jpg" alt="WSA: за январь-февраль производство стали в мире выросло на 6,6%")
                                    .news__content
                                        .news__date 3 декабря 2020 года
                                        a.news__title(href="javascript:void(0);") WSA: за январь-февраль производство стали в мире выросло на 6,6%
                                        .news__text.
                                            В течение января-февраля 2021 года металлургические предприятия 64 стран, предоставляющих
                                            данные World Steel Association, выплавили 315 млн. тонн стали.

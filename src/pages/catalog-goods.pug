extends common/layout

block content
    main.main
        .catalog-goods
            .catalog-goods__container.container
                include common/breadcrumb
                .dropdown.dropdown--catalog-goods
                    .dropdown-label
                        .dropdown-label__txt Ручной инструмент
                    .dropdown-menu 
                        ul.submenu
                            li.active  
                                a(href="javascript:void(0);") Ручной инструмент
                            li  
                                a(href="javascript:void(0);") Пневматический упаковочный инструмент
                            li  
                                a(href="javascript:void(0);") Комбинированный инструмент
                            li  
                                a(href="javascript:void(0);") Аккумуляторный инструмент
                .tab 
                    a.tab__item(href="javascript:void(0);") Все
                    a.tab__item.active(href="javascript:void(0);") Натяжитель ленты
                    a.tab__item(href="javascript:void(0);") Замковой ручной инструмент
                    a.tab__item(href="javascript:void(0);") Замковой инструмент для тяжелых грузов
                    a.tab__item(href="javascript:void(0);") Ножницы для резки
                .aside.aside--reverse
                    .aside__sidebar
                        .form-filter
                            .form-filter__bloc
                                .form-filter__title Наличие
                                .form-filter__group 
                                    label.checkbox(for="agree")
                                        input#agree.checkbox__input(type="checkbox" name="check" value="agree")
                                        .checkbox__label
                                            span Подтверждаю
                    .aside__main

                                input.form-group__input(type="text" id="name" name="name" data-form-field)
                            .form-group(data-form-group)
                                label.form-group__label(for="phone" data-form-label) Телефон*
                                input.form-group__input(type="tel" id="phone" name="phone" data-form-field)
                            .form-group(data-form-group)
                                label.form-group__label(for="email" data-form-label) E-mail*
                                input.form-group__input(type="text" id="email" name="email" data-form-field)

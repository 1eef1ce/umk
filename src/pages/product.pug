extends common/layout

block content
    main.main
        .product
            .container
                include common/breadcrumb
                .product__top
                    .product__icon
                        +icon('layers_alt', 50, 50)
                    .product__title
                        .product__code Код товара: 954108
                        h1.title-1.product__name Натяжитель ленты ГОСТ 380-2005
                include includes/product/product-specs
                .product__bottom
                    .product-price
                        .product-price__text Стоимость:
                        .product-price__value 50 000 ₽
                    .product-actions
                         .count
                            input#quantity.count__input(type="number" name="quantity" placeholder="1 т")
                         a.btn.btn--basic.btn--w200.btn--h47 В корзину
                include includes/product/product-info
                include includes/product/product-related